<div class="container">
  <h2>パスワードの再発行</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "margin-bottom: 10px;" %>
    </div>
  
    <div class="actions">
      <%= f.submit "パスワードの再発行", class: "btn btn-secondary " %>
    </div>
  <% end %>
</div>